<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yeahn.dao.UserMapper">
    <!-- 로그인 -->
    <select id="getUserAccount" resultType="com.yeahn.model.UserVo">
        SELECT id userId, password userPwd, auth userAuth FROM user
        WHERE id = #{userId}
    </select>

    <!-- 회원가입 -->
    <insert id="saveUser" parameterType="com.yeahn.model.UserVo">
        INSERT INTO user
        (id, password)
        VALUES(#{userId},#{userPwd});
    </insert>

</mapper>